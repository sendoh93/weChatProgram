/*atHome style*/
.atHome_tip {
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333333;
  width: 100%;
  height: 100rpx;
}

.moreHome {
  float: right;
  margin-right: 24rpx;
  color: #f2f2f2;
  text-align: right;
  width: 50%;
}

.moreHome image {
  width: 18rpx;
  height: 30rpx;
}

.back-model {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
}

.job_item {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #E5E5E5;
}

.job_item:last-child {
  border-bottom: none;
}

.atHome_image {
  width: 88rpx;
  height: 88rpx;
  vertical-align: middle;
}

.jobList {
  padding: 16rpx 32rpx;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.job_item .atHome_content {
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  float: left;
}

.atHome_title {
  font-size: 32rpx;
  color: #3C3C3C;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 48rpx;
  line-height: 48rpx;
  max-width: 500rpx;
}

.atHome_salary {
  float: right;
  color: #FF8000;
  font-size: 32rpx;
  width: 186rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.atHome_subtitle {
  font-size: 24rpx;
  color: #9C9C9C;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 48rpx;
  line-height: 48rpx;
  max-width: 500rpx;
}

.changeButtn {
  width: 326rpx;
  height: 64rpx;
  border-radius: 8rpx;
  line-height: 64rpx;
  background-image: url('https://qiniu-image.qtshe.com/list_icon_arrow.png') no-repeat;
  background-position: 200rpx 20rpx;
  background-size: 16rpx 20rpx;
  color: #3C3C3C;
  background: #F5F5F5;
  font-size: 24rpx;
  margin-right: 32rpx;
  float: left;
}

.changeButtn:last-child {
  float: right;
  margin-right: 0;
}

.atHome_subtitle image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  vertical-align: middle;
  margin: 9rpx 8rpx 0 0
}

.againRandom {
  text-align: center;
  vertical-align: middle;
  padding: 32rpx;
  width: 100%;
}

.againRandom image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
  line-height: 80rpx;
  margin-top: -4rpx;
  vertical-align: middle;
}

.everyTask {
  width: calc(100% - 32rpx);
  padding-left: 32rpx;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  display: block;
  background: #FFF;
}

.everyTask::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.taskItem {
  width: 280rpx;
  height: 128rpx;
  position: relative;
  overflow: hidden;
  display: inline-block;
  margin-right: 20rpx;
}

.everyPart {
  width: 100%;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
}

.partItem {
  width: 328rpx;
  height: 140rpx;
  position: relative;
  overflow: hidden;
  display: inline-block;
  text-align: center;
}

.partItem image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.part-title {
  width: 100%;
  color: #E5E5E5;
  position: relative;
  z-index: 99;
  font-size: 28rpx;
  margin-top: 32rpx;
  padding: 0 16rpx;
}

.part-subtitle {
  width: 100%;
  color: #FFF;
  position: relative;
  z-index: 99;
  font-size: 32rpx;
  font-weight: 600;
  padding: 0 16rpx;
}

.taskItem image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title {
  width: 100%;
  color: #3C3C3C;
  position: relative;
  z-index: 99;
  font-size: 28rpx;
  margin-top: 28rpx;
  padding: 0 16rpx;
}

.subtitle {
  width: 100%;
  color: #9C9C9C;
  position: relative;
  z-index: 99;
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 16rpx;
}
